{
  "name": "javascript-development-setup",
  "version": "1.0.0",
  "description": "Tooling setup with sample code for modern JS development",
  "main": "index.js",
  "author": "Krisztian Balla <kriszi.balla@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "better-npm-run compile",
    "build": "better-npm-run build",
    "dev": "better-npm-run dev",
    "lint": "eslint bin config server src tests",
    "lint:fix": "npm run lint -- --fix",
    "test": "better-npm-run test",
    "test:watch": "npm run test -- --watch"
  },
  "betterScripts": {
    "compile": {
      "command": "webpack -p --config=config/webpack.config.js",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "build": {
      "command": "npm run lint && npm run test && npm run clean && npm run compile",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "dev": {
      "command": "nodemon bin/dev-server --ignore dist --ignore tests --ignore src",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "mocha \"**/*.spec.js\" --compilers js:babel-core/register --require ./tests/test-helper.js --recursive --timeout 2000",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    }
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "better-npm-run": "^0.0.14",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^0.6.1",
    "css-loader": "^0.27.3",
    "enzyme": "^2.7.1",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.0.1",
    "eslint-config-standard-react": "^4.3.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.1.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "ip": "^1.1.5",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.4.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "sinon": "^2.0.0",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.14.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "debug": "^2.6.3",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
